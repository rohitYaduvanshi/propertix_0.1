{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "src/main.jsx", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/server.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}